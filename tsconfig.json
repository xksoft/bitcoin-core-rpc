{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    //移除注释
    "removeComments": true,
    //强制严格模式
    "alwaysStrict": true,
    "target": "es6",
    "lib": [
      "es6",
      "es2016.array.include"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
